@model List<BikeStoresProject.Models.customers>
@{
    ViewBag.Title = "Customer List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="padding:10px;">
    <a href="/Home/CustomerAdd" class="btn btn-sm btn-success pull-right"> Ekle</a>
</div>
<div class="row">
    <div class="table-responsive" style="padding: 10px;">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Adress</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.first_name</td>
                            <td>@item.last_name</td>
                            <td>@item.phone</td>
                            <td>@item.email</td>
                            <td>@item.street @item.city @item.state @item.zip_code</td>
                            <td>
                                <a href="/Home/CustomerDelete/?id=@item.customer_id" class="btn btn-sm btn-danger">Sil</a>
                                <a href="/Home/CustomerAdd/?id=@item.customer_id" class="btn btn-sm btn-warning">Güncelle</a>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">Kayıt bulunamadı</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


